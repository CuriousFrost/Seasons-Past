rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      // Any authenticated user can read any user doc (needed for friend lookups)
      allow read: if request.auth != null;

      // Owner can do anything with their own doc
      allow write: if request.auth != null && request.auth.uid == userId;

      // Any authenticated user can update another user's doc
      // but ONLY the pendingFriendRequests and friends fields
      allow update: if request.auth != null
        && request.auth.uid != userId
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['pendingFriendRequests', 'friends', 'lastUpdated']);
    }

    // Friend ID lookup collection
    match /friendIds/{friendId} {
      // Any authenticated user can read (for friend ID lookups)
      allow read: if request.auth != null;

      // Only the owner (uid in the doc) can create/write
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
  }
}

{
  "name": "mtg-commander-tracker",
  "version": "1.1.0",
  "description": "MTG Commander Game Tracker",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "build:electron": "electron-builder --win --x64",
    "build:pwa": "node scripts/build-pwa.js",
    "serve:pwa": "npx serve pwa-dist",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.mtgcommander.tracker",
    "productName": "MTG Commander Tracker",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!myDecks.json",
      "!games.json",
      "!commanders.json",
      "!dist/**/*",
      "!pwa-dist/**/*",
      "!.git/**/*",
      "!scripts/**/*",
      "!pwa-storage.js",
      "!service-worker.js"
    ]
  },
  "dependencies": {
    "firebase": "^12.8.0"
  }
}
